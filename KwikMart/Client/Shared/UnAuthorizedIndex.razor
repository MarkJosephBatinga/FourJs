<div class="container-fluid body-container">
    <div class="title-box row">
        <div class="title-img-box col-6 d-flex justify-content-end">
            <img src="./css/images/header4j.png" class="img-title" alt="cart">
        </div>
        <div class="title-text-box col-6 d-flex flex-column justify-content-center align-items-start">
            <h2 class="title-text">Largest Digital Library in the Philippines</h2>
            <h5 class="sub-title w-75">
                4Js Bookstore is overall the best and most convenient deal for online reading" Access millions of ebooks, audiobooks,
                magazines, and more. Plus free premium services.
            </h5>
        </div>
    </div>
    <div class="category-box row d-flex justify-content-center">
        <h3 class="category-title">Best Selling Books</h3>
        <div class="category-card col-3 mx-5 d-flex flex-column align-items-center">
            <img class="category-img" src="./css/images/atomic.png" alt="drinks">
            <h5 class="category-text">Harry Potter</h5>
        </div>
        <div class="category-card col-3 mx-5 d-flex flex-column align-items-center">
            <img class="category-img" src="./css/images/percy.png" alt="drinks">
            <h5 class="category-text">Percy Jackson</h5>
        </div>
        <div class="category-card p-3 col-3 mx-5 d-flex flex-column align-items-center">
            <img class="category-img" src="./css/images/dvinci.png" alt="drinks">
            <h5 class="category-text">Da Vinci Code</h5>
        </div>
    </div>
    <div class="why-box">
        <div class="why-card row">
            <div class="title-text-box col-7 d-flex flex-column justify-content-center align-items-end">
                <h2 class="why-title">Responsive Web Design</h2>
                <h5 class="why-content text-end">
                    It features a responsive design that adjusts to look good on
                    both desktop computers and mobile devices.
                </h5>

            </div>
            <div class="title-img-box col-5 d-flex justify-content-start">
                <img src="./css/images/response.png" class="img-title" alt="cart">
            </div>
        </div>
        <div class="why-card row">
            <div class="title-img-box col-6 d-flex justify-content-end">
                <img src="./css/images/book-genre.png" class="img-title" alt="cart">
            </div>
            <div class="title-text-box col-6 d-flex flex-column justify-content-center align-items-start">
                <h2 class="why-title">Different Kinds of Book Genre</h2>
                <h5 class="why-content">
                    A new kind of bookstore that allows you to browse and discover titles online and then purchase and download the books
                    directly into your ereader, tablet, or computer.
                </h5>
            </div>
        </div>
    </div>
    <div class="contact-box row">
        <div class="contact-img-card col-4 d-flex justify-content-end">
            <img src="./css/images/contc.png" class="contact-img" alt="Contact">
        </div>
        <div class="contact-content-card col-8 d-flex flex-column align-items-center justify-content-center">

            @if (!contact)
            {
                <h3 class="contact-text">Any Question or Quiries? We can answer them directly.</h3>
                <button class="contact-button" @onclick="OnContactClick">Contact Us</button>
            }
            else
            {
                <h3 class="contact-text">Contact Use here</h3>
                <h3 class="contact-text">fourjsofficial@gmail.com</h3>
                <h3 class="contact-text">+63 9123456789</h3>
                <button class="contact-button" @onclick="OnContactClick">Cancel</button>
            }

        </div>
    </div>
</div>

@code {

    bool contact = false;

    private void OnContactClick()
    {
        contact = !contact;
    }
} 